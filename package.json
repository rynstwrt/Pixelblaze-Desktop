{
  "name": "pixelblaze-desktop",
  "description": "A desktop app to control Pixelblaze LED controllers.",
  "author": "Ryan Stewart",
  "build": {
    "productName": "Pixelblaze Desktop",
    "appId": "art.ryanstew.pixelblazedesktop",
    "directories": {
      "buildResources": "public"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "version": "1.0.1",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^2.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "reactjs-popup": "^2.0.5",
    "ws": "^8.0.0"
  },
  "scripts": {
    "start": "craco start",
    "react-build": "craco build",
    "react-test": "craco test",
    "react-eject": "craco eject",
    "dev": "concurrently -k \"npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=never",
    "build": "yarn react-build && yarn electron-build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^15.5.5",
    "electron-builder": "^22.11.7",
    "wait-on": "^6.0.0"
  }
}
